<section id="new-emote" class="clearfix">
  <%= form_for(@emote) do |f| %>
    <% if @emote.errors.any? %>
      <div id="error_explanation" style="width: 100%; margin-bottom: 15px;">
        <h2><%= pluralize(@emote.errors.count, "error") %> prohibited this emote from being saved:</h2>
        <ul>
          <% @emote.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
    <div class="col-left clearfix">
      <div class="field">
        <%= f.label :text, 'emoticon text' %><br />
        <%= f.text_field :text, :class => 'rounded', :value => 'ex:  Σ(゜д゜;)', :id => 'new-emoticon-text' %>
      </div>
      <div class="field">
        <%= f.label :note, 'a tagline to explain the emoticon (optional)' %><br />
        <%= f.text_field :note, :class => 'rounded', :value => 'ex: a strange face', :id => 'new-emoticon-tagline' %>
      </div>
    </div>
    <div class="col-right clearfix" id="new_emote_tags" >
      <%= f.label :tags, 'tags' %><br />
      <div class="tag-background">
        <%= f.autocomplete_field :tag_list, autocomplete_tag_name_emotes_path, :value => "ex: happy", :id => 'new_emote_tags_input', :class => 'rounded' %>
        <span>tags added will show up here</span>
        <ul id="new-emote-tag-list" class="tags hover clearfix"></ul>
      </div>
      <%= f.submit :value => 'Create Emoticon', :class => 'button', :id => 'new-emote-submit' %>
      </div>
    </div>
  <% end %>
  </div>
</section>
