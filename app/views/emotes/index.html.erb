<section id="search-tag" class="clearfix" style="height: 60px;">
  <%= autocomplete_field_tag 'tag', '', autocomplete_tag_name_emotes_path, :size => 75, 
     :id => 'search', :value => "Search Emoticons With Tags Here", :autocomplete => "off", :class => 'rounded' %>
  <input id="btn-search" type="button" value=""/>
  
  <ul id="search-tags"></ul>
</section>

<section id="emoticon-display" style="height: 180px; display: none;">
  <p id="selected-note">a very angry face</p>
  <h1 id="selected-emoticon" style="height: 51px; line-height: 51px;">(╬ ಠ益ಠ)</h1>
  <input type="button" value="Copy to Clipboard" />
  <!-- <input type="button" value="Tweet" /> -->
  <input id="btn-add-to-favorites" type="button" value="Add to Favorites" />
  
  <br />
  
  <% if is_logged_in? %>
    <%= form_for(@emote, :remote => false) do |f| %>
      <%= f.hidden_field :id, :value => "0", :id => "selected-id" %>
      <%= f.autocomplete_field :tag_list, autocomplete_tag_name_emotes_path, :value => "Add a New Tag to this Emoticon", :id => 'add_tags', :class => 'rounded' %>
      <%= f.submit :value => "", :class => 'add' %>
    <% end %>
  <% end %>
  
  <ul id="tag-list"></ul>
</section>

<section id="emoticon-list" class="clearfix">
  <%= render 'emote_list' %>
</section>